<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/md_orange_100</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/color_bg_dialog_policy</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/color_bg_dialog_policy</item>
        <item name="android:colorControlActivated">?attr/colorPrimaryDark</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>

    <style name="DialogContent">
        <item name="android:minLines">3</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:layout_marginEnd">@dimen/_17ssp</item>
        <item name="android:layout_marginStart">@dimen/_17ssp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


</resources>
